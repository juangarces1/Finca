@model IEnumerable<Finca.Web.Models.NacimientosViewModel>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />
<div class="row">   
        <div class="card">
            <div class="card-header">
                <b>Nacimientos Esparados</b>
            </div>
            <div class="card-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.animal.NumeroFinca)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.animal.Nombre)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.animal.Age)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.animal.NumeroFinca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.animal.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.animal.Age)
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</div>


<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();

            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Animals/Delete/' + item_to_delete;
            });
        });
    </script>
}

