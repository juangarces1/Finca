
@model Finca.Web.Models.AnimalViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Editar</h2>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FotoPath" />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Padres" class="control-label"></label>
                <select asp-for="Padre" asp-items="Model.Padres" class="form-control"></select>
                <span asp-validation-for="Padre" class="text-danger"></span>
            </div>          

            <div class="form-group">
                <label asp-for="Tipos" class="control-label"></label>
                <select asp-for="TypeAnimalId" asp-items="Model.Tipos" class="form-control"></select>
                <span asp-validation-for="TypeAnimalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lotes" class="control-label"></label>
                <select asp-for="LoteId" asp-items="Model.Lotes" class="form-control"></select>
                <span asp-validation-for="LoteId" class="text-danger"></span>
            </div>


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Animal" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-circle-left"></i>Volver</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.FotoPath))
        {
            <img src="@Url.Content(Model.FotoPath)" alt="Image" style="width:600px;height:400px;max-width: 100%; height: auto;" />
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
